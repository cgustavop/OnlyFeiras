<div class="destaque white" style="background-image: linear-gradient(120deg, #00AFF0 0%, rgba(217, 217, 217, 0) 60%), url(@imagem);">
    <h1 class="wheight600">@titulo</h1>
    <p class="txt-mid">@descricao</p>
    <h1 class="txt-big">@data</h1>
</div>

@code {
    public string imagem { get; set; } = "assets/shoes.jpg";

    public string titulo { get; set; } = "Título Feira";

    public string descricao { get; set; } = "Isto é a descrição da feira, pode ser tão extensa quanto se quiser, embora não dê muito jeito dado o espaço que temos aqui.";

    public string data { get; set; } = "Data da feira";
}
